<%# Index page for events %>
<%= button_to "Create Event",
new_event_path, method: :get,
class: "rounded-lg shadow-md p-2 bg-indigo-700 hover:animate-pulse text-white mb-4" %>
<h1 class="text-2xl font-bold">
  <% if @events_type == "past" %>
    Past Events
  <% elsif @events_type == "all" %>
    Past & Upcoming Events
  <% else %>
    Upcoming Events
  <% end %>
</h1>
<section
  id="events"
  class="mt-4 grid lg:grid-cols-4 md:grid-cols-1 gap-2 md:gap-2 lg:gap-4"
>
  <% if @events.any? %>
    <%= render @events %>
  <% else %>
    <p class="text-center text-lg font-bold">
      No events found
      <p class="text-center text-lg font-bold">Check <%= link_to "previous events", root_path(old_events: true), class: "text-indigo-500 hover:text-indigo-400 hover:underline" %> or <%= link_to "create a new one", new_event_path, class: "text-green-700 hover:text-green-500 hover:underline"%></p>
    <% end %>
  </section>
