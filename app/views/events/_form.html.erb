<div class="max-w-md bg-white shadow-md rounded-lg p-8 m-auto">
  <h2 class="text-2xl font-bold text-gray-900 text-center mb-6 underline">Event Details</h2>
  <%= form_with model: event, class: "space-y-6" do |f| %>
    <div>
      <%= f.label :title, "Name", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :title,
                    autocomplete: "event-title",
                    autofocus: true,
                    placeholder: "Hackathon",
                    class:
                      "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
        <div>
      <%= f.label :location, "Venue", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :location,
                       autocomplete: "location",
                       placeholder: "Where's it happening?",
                       class:
                         "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :desription, class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_area :description,
                       autocomplete: "description",
                       placeholder: "Describe your event",
                       class:
                         "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>

    <div>
      <%= f.label :date, class: "block text-sm font-medium text-gray-700" %>
      <%= f.datetime_field :date,
                       autocomplete: "date",
                       class:
                         "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
    </div>
    <div>
      <%= f.submit class:
                 "w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>
</div>
